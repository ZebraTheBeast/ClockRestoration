@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="container">
    <div class="row order-block">
        <div class="col-md-5 d-flex order-page-name">
            <h2 class="my-auto page-name">Зарегистрироваться</h2>
        </div>
        <div class="col-md-7">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.FirstName, "Имя", new { @class = "input-group-text w-100" })
                    </span>

                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", required = "required" })

                </div>
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.LastName, "Фамилия", new { @class = "input-group-text w-100" })
                    </span>

                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", required = "required" })

                </div>
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.PhoneNumber, "Номер телефона", new { @class = "input-group-text w-100" })
                    </span>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", required = "required" })

                </div>
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.Email, "Email", new { @class = "input-group-text w-100" })
                    </span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required" })

                </div>
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.Password, "Пароль", new { @class = "input-group-text w-100" })
                    </span>

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })

                </div>
                <div class="form-group input-group">
                    <span class="input-group-prepend order-name-field">
                        @Html.LabelFor(m => m.ConfirmPassword, "Подтвердите пароль", new { @class = "input-group-text w-100" })
                    </span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })

                </div>


                <button type="submit" class="btn btn-success btn-block">Зарегистрироваться</button>
            }

        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
