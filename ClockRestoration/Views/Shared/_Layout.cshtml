<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Реставрация циферблата часов</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg ">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Реставрация циферблата часов", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink("Главная", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Галерея", "Gallery", "Home", new { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Контакты", "Contacts", "Home", new { }, new { @class = "nav-link" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Оформить заказ", "Order", "Home", new { }, new { @class = "nav-link" })</li>
                        if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">@Html.ActionLink("Админ панель", "AdminPanel", "Admin", new { }, new { @class = "nav-link" })</li>
                        }

                    }
                </ul>

                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav navbar-right">
                        <li class="nav-item">
                            <a href="@Url.Action("Register", "Account")" class="nav-link">
                                <i class="glyphicon glyphicon-user">&nbsp;</i> Зарегистрироваться
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="@Url.Action("Login", "Account")">
                                <i class="glyphicon glyphicon-log-in">&nbsp;</i> Войти
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav navbar-right">
                        <li class="nav-item">
                            <a href="@Url.Action("Cabinet", "Home")" class="nav-link">
                                <i class="glyphicon glyphicon-info-sign">&nbsp;</i>Мой кабинет
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("SignOut", "Account")" class="nav-link">
                                <i class="glyphicon glyphicon-log-out">&nbsp;</i> Выйти
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>



    @RenderBody()
   
    <footer class=" ftr page-footer font-small unique-color-dark pt-4">
        <div class="footer-copyright text-center py-3">
            <p>Makar Nosov ©2019</p>
        </div>
    </footer>

    




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
