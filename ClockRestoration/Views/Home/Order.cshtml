@model ClockRestoration.ViewModels.ResponseOrderView

<h2>Order</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("MakeOrder", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Order.BrandId, "Brand", new { @class = "form-label" })
                @Html.DropDownListFor(m => m.Order.BrandId, new SelectList(Model.Brands, "Id", "Title"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.ClockTypeId, "Clock Type")
                @Html.DropDownListFor(m => m.Order.ClockTypeId, new SelectList(Model.ClockTypes, "Id", "Title"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.Image, "Image")
                @Html.TextBoxFor(m => m.Order.Image, new { type = "file", accept = "image/*", @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.DeadLine, "Deadline")
                @Html.TextBoxFor(m => m.Order.DeadLine, new { type = "date", @class = "form-control", min = DateTime.Now.ToString("yyyy-MM-dd"), required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.Comments, "Comments")
                @Html.TextAreaFor(m => m.Order.Comments, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.PhoneNumber, "Phone number")
                @Html.TextBoxFor(m => m.Order.PhoneNumber, new { @class = "form-control", placeholder = "333-333-3333", pattern = "[0-9]{3}-[0-9]{3}-[0-9]{4}", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.DeliveryId, "Delivery")
                @Html.DropDownListFor(m => m.Order.DeliveryId, new SelectList(Model.Deliveries, "Id", "Title"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.PaymentId, "Payment")
                @Html.DropDownListFor(m => m.Order.PaymentId, new SelectList(Model.Payments, "Id", "Title"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Order.Address, "Address")
                @Html.TextBoxFor(m => m.Order.Address, new { @class = "form-control", required = "required" })
            </div>
            <button type="submit" class="btn btn-success">Send</button>
        }
    </div>
</div>